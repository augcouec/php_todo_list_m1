{% extends 'base.html.twig' %} {% block title %}Hello TodoController!{% endblock
%} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="example-wrapper">
  <h1>Hello ! ✅</h1>

  <a href="{{ path('add_task') }}"> Add a task</a>
  <a href="{{ path('clear_all') }}">Clear all</a>
  <a href="{{ path('done_all')}}">Done all </a>

  {% if (todo is defined)%}
  {% for task in todo %}
  <div>
    <h1>{{ task.title }}</h1>
    <p>{{ task.content }}</p>
    <button onclick="location.href='{{ path('remove_task', { taskId: task.id }) }}'"> remove </button>
    <button onclick="location.href='{{ path('change_status', { taskId: task.id }) }}'"> {{ task.done ? 'undone'  : 'done'}} </button>
    {% if task.done == true %}
        <span>✅</span>
    {% endif %}
  </div>

  {% endfor %}
  {% endif %}
</div>
{% endblock %}
